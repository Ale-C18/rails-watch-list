<div class="d-flex banner align-items-center justify-content-center">
  <div class="container">
    <h1><strong>Movies Lists</strong></h1>
  </div>
</div>


  <% @lists.each do |list| %>
    <div>
      <%= link_to list.name, list_path(list)%>
      <%= link_to "Delete",
        list_path(list),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
      <%= link_to "Añadir una Reseña", new_list_bookmark_path(list) %>
    </div>
  <% end %>


<div>
  <%= link_to "Crear una nueva lista", new_list_path %>
</div>

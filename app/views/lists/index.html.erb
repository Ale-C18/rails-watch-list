<div class="d-flex banner b-index align-items-center justify-content-center">
  <div class="container">
    <h1><strong>Movies Lists</strong></h1>
  </div>
</div>

<div class="container">
  <div class="lists d-flex justify-content-between p-3">
    <div>
      <h2><strong>My Lists</strong></h2>
    </div>
    <div>
      <%= link_to new_list_path do %>
        <div class="btn btn-success">Add a new list</div>
      <% end %>
    </div>
  </div>
  <div class="d-flex justify-content-start">
    <% @lists.each do |list| %>
      <div class="card m-3">
        <%= link_to list_path(list) do%>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= url_for list.photo %>')">
            <%= list.name %>
          </div>
        <% end %>
        <%= link_to "Delete",
          list_path(list),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
        %>
      </div>
    <% end %>
  </div>
</div>
